{
  "name": "sensor-steam-react",
  "author": "Sensor Steam",
  "description": "Sensor Steam React App",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "public/electron.js",
  "scripts": {
    "_comentario": "Reemplazar start para exportar aplicacion por este y agregar comillas -> start: electron-forge start",
    "dev": "vite",
    "electron": "electron .",
    "server": "nodemon server.js",
    "start": "concurrently \"npm run dev\" \"npm run electron\" \"npm run server\"",
    "build": "vite build",
    "make": "electron-forge make",
    "build:frontend": "vite build",
    "start:electron": "electron .",
    "start:backend": "nodemon server.js",
    "package": "electron-forge package",
    "test": "jest --maxWorkers=1"
  },
  "dependencies": {
    "axios": "^1.7.8",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.1",
    "node-cron": "^3.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.7.0",
    "@electron-forge/maker-deb": "^7.7.0",
    "@electron-forge/maker-rpm": "^7.7.0",
    "@electron-forge/maker-squirrel": "^7.7.0",
    "@electron-forge/maker-zip": "^7.7.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.7.0",
    "@electron-forge/plugin-fuses": "^7.7.0",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.15.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "electron": "^33.2.1",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "express": "^4.21.2",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "jest-esm-transformer": "^1.0.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0",
    "vite": "^6.0.0"
  },
  "config": {
    "forge": {
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "sensor_steam_app"
          }
        }
      ]
    }
  }
}
